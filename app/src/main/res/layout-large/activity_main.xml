<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context=".MainActivity">
    <fragment
        android:id="@+id/fragment_list"
        android:name="es.ua.eps.filmoteca.FilmListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_film_list"
        android:layout_margin="20dp">
    </fragment>
    <fragment
        android:id="@+id/fragment_data"
        android:name="es.ua.eps.filmoteca.FilmDataFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_film_data">
    </fragment>
</LinearLayout>